{
  "build": {
    "beforeDevCommand": "yarn web-dev",
    "beforeBuildCommand": "yarn web-build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "productName": "Monarch",
  "mainBinaryName": "monarch",
  "version": "0.1.0",
  "identifier": "monarch",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Monarch",
        "width": 1280,
        "height": 720,
        "theme": "Dark",
        "titleBarStyle": "Overlay",
        "useHttpsScheme": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "**/.local/share/monarch/resources/**/*.jpg",
          "**/Monarch/resources/**/*.jpg"
        ],
        "enable": true
      },
      "csp": {
        "img-src": [
          "'self'",
          "data:",
          "asset:",
          "https://asset.localhost"
        ],
        "default-src": [
          "'self'"
        ],
        "connect-src": [
          "ipc: http://ipc.localhost"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ]
      }
    }
  }
}